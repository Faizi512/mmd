              <div class="col-md-3 text-center align-self-center">
                <%= image_tag(data[:image], class: "", width: "80" ) %>
              </div>
              <div class="col-md-6 px-1 text-md-left text-center mt-md-0 mt-2">
                <h6 class="m-0"> <span class="font-weight-bold"><%= data[:contract] %></span> month contract</h6>
                <p class="mb-1"><%= data[:toptext] %></p>
