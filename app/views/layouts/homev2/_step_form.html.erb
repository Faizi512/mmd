<!-- Form -->
<div class="modal fade pr-0" id="deal-form-modal" tabindex="-1" role="dialog" aria-labelledby="ModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content deal-form-box">
      <div class="modal-header">
         <h1 id="ModalCenterTitle"><span class="text-blue">You are just</span> 30 seconds <span class="text-blue"> away from your dream phone</span></h1>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="form" id="dealform" data-details="<%= @details %>" method="post" action="javascript:;">
          <div class="progress mb-5">
            <div class="progress-bar w-0" id="progressBar"></div>
          </div>
          <div  class="tab display-none" id="slide1">
            <div class="row justify-content-center">
              <div class="form-group col-lg-7 col-12">
              <label>Title </label>
              <select
                id="titleId"
                name="titleId"
                class="titleId form-control"
                data-parsley-required="true"
                data-parsley-required-message="Please Select Title"
                data-parsley-group="block-0"
                required>
                <option value="">Please Select Title</option>
                <option value="Mr">Mr</option>
                <option value="Mrs">Mrs</option>
                <option value="Miss">Miss</option>
                <option value="Ms">Ms</option>
                <option value="Dr">Dr</option>
              </select>
              </div>
              <div class="form-group col-lg-7 col-12">
                <label>First Name*</label>
                <input
                name="first_name"
                required
                data-parsley-required="true"
                data-parsley-required-message="Please Enter First Name" data-parsley-pattern-message="First Name Must Be Alphabetic" data-parsley-pattern="/^[a-zA-Z ]*$/"
                data-parsley-group="block-0"
                type="text"
                class="first_name form-control hero-input ignoreStep3"
                placeholder="First Name" >
                 <i class="validate success fa fa-check-circle"></i>
                <i class="validate error fa fa-times-circle"></i>
              </div>
              <div class="form-group col-lg-7  col-12">
                <label>Last Name*</label>
                <input
                name="last_name"
                required
                data-parsley-required="true"
                data-parsley-required-message="Please Enter Last Name"
                data-parsley-group="block-0"
                data-parsley-pattern-message="Last Name Must Be Alphabetic" data-parsley-pattern="/^[a-zA-Z ]*$/"
                type="text"
                class="form-control ignoreStep3 last_name"
                placeholder="Surname" >
                 <i class="validate success fa fa-check-circle"></i>
                <i class="validate error fa fa-times-circle"></i>
              </div>
            </div>
          </div>
          <div  class="tab display-none" id="slide2">
            <div class="row justify-content-center">
              <div class="form-group col-lg-7 col-12">
                  <select
                  id="employment_status"
                  name="employmentStatus"
                  class="employment_status form-control"
                  data-parsley-required="true"
                  data-parsley-required-message="Please Select Your Employment Status"
                  data-parsley-group="block-1"
                  required>
                    <option value="">Select Your Employement Status</option>
                    <option value="FULL_TIME">full time employment</option>
                    <option value="PART_TIME">part time employment</option>
                    <option value="SELF_EMPLOYED">self employed</option>
                    <option value="UNEMPLOYED">unemployed</option>
                    <option value="PENSION">pension</option>
                    <option value="BENEFITS">benefits</option>
                    <option value="STUDENT">student</option>
                    <option value="OTHER">other</option>
                  </select>
              </div>
              <div class="form-group col-lg-7 col-12">
                <input 
                required
                data-parsley-required="true"
                data-parsley-required-message="Please Enter date of birth" 
                data-parsley-pattern-message="Date of birth Must Be Alphabetic" 
                data-parsley-group="block-1"
                type="date" 
                name="dob" 
                placeholder="Date of Birth"
                class="dob form-control hero-input "
                id="dob" />
              </div>
            </div>
          </div>
          <div  class="tab display-none" id="slide3">
            <div class="row justify-content-center">
              <!-- postcode -->
              <div class="form-group col-lg-7  col-12">
                <label>Postcode*</label>
                <div class="w-100 justify-content-center">
                  <input
                  name="postcode"
                  required
                  data-parsley-required="true"
                  data-parsley-required-message="Please Enter Postcode"
                  data-parsley-group="block-2"
                  data-parsley-validapipostcode
                  type="text"
                  class="postcode form-control ignoreStep4"
                  placeholder="Postcode">
                  <button type="button" class="btn btn-success rounded-right left-0r findAddress-btn">Find Address</button>
                </div>
                <div class="postcode-error position-absolute"></div>
              </div>

              <div class="form-group col-lg-7 col-12 property-div display-none">
                <label>Your Property*</label>
                <input type="hidden" name="towncity" class="towncity" >
                <input type="hidden" name="street1" class="street1" >
                <input type="hidden" name="county" class="county" >
                <input type="hidden" name="houseNumber" class="houseNumber" >
                <input type="hidden" name="street2" class="street2" >
                <input type="hidden" name="building" class="building" >
                <select
                  id="property"
                  name="property"
                  class="property w-100 form-control ignoreStep4 text-dark"
                  data-parsley-required="true"
                  data-parsley-required-message="Please Select Your property"
                  data-parsley-group="block-2"
                  required>
                </select>
              </div>

              <div class="form-group col-lg-7 col-12 address-div display-none">
                <label class="d-flex justify-content-start  text-black f-25 mb-2">
                  First Line Of Address
                </label>
                <input
                  placeholder="Address"
                  id="address"
                  name="address"
                  class="address form-control ignoreStep4"
                  data-parsley-required="true"
                  data-parsley-required-message="Please Enter Your Address"
                  data-parsley-group="block-2"
                  type="text"
                  >
              </div>
            </div>
          </div>
          <div  class="tab phoneEmailTab display-none" id="slide4">
            <div class="row justify-content-center">
              <div class="input-group  mb-3  col-lg-7 phone-div">
                <label class="w-100">Mobile Number*</label>
                <input
                type="number"
                name="telephone"
                required
                data-parsley-required="true"
                data-parsley-required-message="Please Enter Valid Uk Phone Number"
                data-parsley-type="number"
                data-parsley-group="block-3"
                data-parsley-validphone
                class="form-control phone telephone"
                placeholder="Mobile Number">
                <div class="input-group-append">
                  <span class="input-group-text">
                     <%= image_tag("privacy.png", class: "privcy pull-right", alt: "Privacy image" ) %>
                  </span>
                </div>
              </div>
              <div class="input-group mb-3  col-lg-7 email-div">
                <label class="w-100">Email Address*</label>
                <div class="clearfix"></div>
                <input
                type="email"
                name="email"
                required
                data-parsley-required="true"
                data-parsley-required-message="Please Enter Valid Email Address"
                data-parsley-type="email"
                data-parsley-type-message="Please Enter Valid Email Address"
                data-parsley-group="block-3"
                data-parsley-validemail
                value=""
                class="form-control nme_inpu email"
                placeholder="Email Address">
                <div class="input-group-append">
                  <span class="input-group-text">
                    <%= image_tag("privacy.png", class: "privcy pull-right", alt: "Privacy image") %>

                  </span>
                </div>
              </div>
              <div class="custom-checkbox col-lg-7">
                <label>Accept</label>
                <div class="onoffswitch">
                  <input type="hidden" name="c1">
                  <input
                    type="checkbox"
                    name="agree"
                    class="onoffswitch-checkbox approve"
                    id="myonoffswitch"
                    data-parsley-required="true"
                    data-parsley-group="block-3"
                    data-parsley-required-message="Please accept our terms and conditions"
                    >
                  <label class="onoffswitch-label" for="myonoffswitch">
                      <span class="onoffswitch-inner"></span>
                      <span class="onoffswitch-switch"></span>
                  </label>
                </div>
                <div class="error-checkbox text-center"></div>
                <%= render 'layouts/common/accept_term_popup'%>
              </div>
            </div>
          </div>
          <div class="col-lg-7 col-12 btn-div justify-content-center">
            <div class="row justify-content-center">
              <div class="col-6 mx-auto">
                <button id="btn-back" type="button" class="btn btn-primary btn-lg o-btn">Back</button>
              </div>
              <div class="col-md-6 col-8 text-center mx-auto">
                <i class="lodr but_loader display-none position-absolute">
                  <%= image_tag("button-ajax-loader.gif", alt: "loader image") %>
                </i>
                <button id="btn-continue" type="button" class="btn btn-success btn-lg o-btn nextStep" >Continue</button>
              </div>
            </div>
          </div>

          <div class="mt-2 text-center securityInfo">
            <ul>
              <li>
              <%= image_tag("lock.png", alt: "privacy lock") %>
              </li>
              <li>Safe</li>
              <li>Secure</li>
              <li>Privacy Protected</li>
            </ul>
          </div>
          <%= render 'layouts/common/form_network_logo'%>
        </form>
      </div>
    </div>
  </div>
</div>


