<!-- Deals list section -->
<section  class="bg-light py-5">
  <% @phoneshome.each do |phone| %>
    <div class="container  deals-list mb-3 open-form" data-url="<%= phone[:url] %>" data-product-id="<%= phone['product_id'] %>">
      <div class="row">
        <div class="col offset-xl-2 main-div">
          <div class="card box">
            <div class="card-body py-md-0">
              <div class="row align-items-center">
                <div class="img">
                  <%= image_tag(phone['image'], class: "horizonatal-box-img p-3", alt: "Phone image" ) %>
                  <input type="hidden" id="phone_name" name="phone_name" value="<%= phone[:handset] %>">
                </div>
                <div class="col-6 col-md-7 mobile price-details">
                  <div class="detail-box p-3 rounded">
                    <span class="text-muted fs-14 font-weight-normal">
                      <%= phone['bluetext'] %>
                    </span>
                    <hr>
                    <small class="text-muted">Deposit from</small>
                      <span class="bolder d-block mt-2"><%= phone['deposit'] %>
                    </span>
                  </div>
                </div>
                <div class="col">
                  <h5 class="font-weight-bold mb-2">
                    <%= phone['name'] %>
                  </h5>
                  <div class="row features">
                    <div class="col px-md-2 px-1">
                      <div class="box text-center">
                        <h6 class="font-weight-bold mb-0 mt-2 fs-24" ><%= phone['data'] %> </h6>
                        <span class="text-muted fs-14 font-weight-normal">
                          Data
                        </span>
                      </div>
                    </div>
                    <div class="col px-md-2 px-1">
                      <div class="box text-center">
                        <h6 class="font-weight-bold mb-0 mt-2 fs-24" ><%= phone['calls'] %></h6>
                        <span class="text-muted fs-14 font-weight-normal">
                          Calls
                        </span>
                      </div>
                    </div>
                    <div class="col px-md-2 px-1">
                      <div class="box text-center">
                        <h6 class="font-weight-bold mb-0 mt-2 fs-24" ><%= phone['texts'] %></h6>
                        <span class="text-muted fs-14 font-weight-normal">
                          Texts
                        </span>
                      </div>
                    </div>
                  </div>
                   <hr>
                  <div class="row actions">
                    <div class="col-md-6">
                      <button class="btn btn-primary o-btn open-form w-100 font-weight-bold"  data-product-id="<%= phone[:product_id] %>">Apply now - it's free!</button>
                    </div>
                    <div class="col-md-6">
                      <button class="btn btn-primary open-form w-100 font-weight-bold"  data-product-id="<%= phone[:product_id] %>">More Info</button>
                    </div>
                  </div>
                </div>

                <div class="col-md-3 desktop">
                  <div class="detail-box p-3">
                    <span class="text-muted fs-14 font-weight-normal">
                      <%= phone['bluetext'] %>
                    </span>
                    <hr>
                    <small class="text-muted">Deposit from</small>
                      <span class="bolder d-block mt-2">Â£0
                    </span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</section>
